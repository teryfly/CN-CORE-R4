<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <id value="Department" />
  <url value="http://StructureDefinition.hl7fhir.cn/Department" />
  <name value="Department" />
  <title value="科室/部门" />
  <status value="draft" />
  <description value="科室/部门的基本信息描述" />
  <fhirVersion value="4.0.0" />
  <mapping>
    <identity value="v2" />
    <uri value="http://hl7.org/v2" />
    <name value="HL7 v2 Mapping" />
  </mapping>
  <mapping>
    <identity value="rim" />
    <uri value="http://hl7.org/v3" />
    <name value="RIM Mapping" />
  </mapping>
  <mapping>
    <identity value="servd" />
    <uri value="http://www.omg.org/spec/ServD/1.0/" />
    <name value="ServD" />
  </mapping>
  <mapping>
    <identity value="w5" />
    <uri value="http://hl7.org/fhir/fivews" />
    <name value="FiveWs Pattern Mapping" />
  </mapping>
  <kind value="resource" />
  <abstract value="false" />
  <type value="Organization" />
  <baseDefinition value="http://StructureDefinition.hl7fhir.cn/Organization" />
  <derivation value="constraint" />
  <differential>
    <element id="Organization">
      <path value="Organization" />
      <short value="科室/部门" />
      <definition value="描述科室/部门的基本信息" />
    </element>
    <element id="Organization.extension">
      <path value="Organization.extension" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="url" />
        </discriminator>
        <rules value="open" />
      </slicing>
    </element>
    <element id="Organization.extension:BriefIntroduction">
      <path value="Organization.extension" />
      <sliceName value="BriefIntroduction" />
      <short value="部门/科室简介" />
      <definition value="对部门/科室基本信息情况进行文字描述。" />
      <max value="1" />
      <type>
        <code value="Extension" />
        <profile value="http://StructureDefinition.hl7fhir.cn/BriefIntroduction" />
      </type>
    </element>
    <element id="Organization.identifier">
      <path value="Organization.identifier" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="type" />
        </discriminator>
        <rules value="open" />
      </slicing>
    </element>
    <element id="Organization.identifier:institutionCode">
      <path value="Organization.identifier" />
      <sliceName value="institutionCode" />
      <short value="部门编码" />
      <definition value="标识符，唯一且明确地标识某个域中的实体。常用作业务标识符，在不同业务域中的唯一标识ID。在很多场景下可作为交叉索引使用。&#xD;&#xA;该编码为医疗机构内部统一的部门编码" />
      <max value="1" />
    </element>
    <element id="Organization.identifier:pinYinCode">
      <path value="Organization.identifier" />
      <sliceName value="pinYinCode" />
      <short value="拼音码" />
      <definition value="科室/部门名称的拼音的首字母编码" />
      <max value="1" />
    </element>
    <element id="Organization.identifier:otherIdentifier">
      <path value="Organization.identifier" />
      <sliceName value="otherIdentifier" />
      <short value="其他业务代码" />
      <definition value="其它标识科室/部门的业务ID" />
    </element>
    <element id="Organization.type:healthInstitutionCategory">
      <path value="Organization.type" />
      <sliceName value="healthInstitutionCategory" />
      <max value="0" />
    </element>
    <element id="Organization.type:ClassificationForOrganizations">
      <path value="Organization.type" />
      <sliceName value="ClassificationForOrganizations" />
      <max value="0" />
    </element>
    <element id="Organization.name">
      <path value="Organization.name" />
      <short value="科室/部门名称" />
      <definition value="此科室/部门的中文名称" />
    </element>
    <element id="Organization.alias">
      <path value="Organization.alias" />
      <short value="科室/部门别名" />
      <definition value="该科室/部门的其他名称或曾用名的列表，如第二名称等。" />
    </element>
    <element id="Organization.telecom">
      <path value="Organization.telecom" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="system" />
        </discriminator>
        <rules value="open" />
      </slicing>
    </element>
    <element id="Organization.telecom:TelecomPhone">
      <path value="Organization.telecom" />
      <sliceName value="TelecomPhone" />
      <short value="联系电话" />
      <definition value="部门联系电话" />
      <fixedContactPoint>
        <system value="phone" />
      </fixedContactPoint>
    </element>
    <element id="Organization.telecom:TelecomEmail">
      <path value="Organization.telecom" />
      <sliceName value="TelecomEmail" />
      <short value="电子邮箱" />
      <definition value="部门电子邮箱" />
      <fixedContactPoint>
        <system value="email" />
      </fixedContactPoint>
    </element>
    <element id="Organization.address.extension:adminDivision">
      <path value="Organization.address.extension" />
      <sliceName value="adminDivision" />
      <max value="0" />
    </element>
    <element id="Organization.partOf">
      <path value="Organization.partOf" />
      <short value="上级机构" />
      <definition value="描述本部门/科室隶属于哪个机构或者病区" />
      <type>
        <extension url="http://hl7.org/fhir/StructureDefinition/structuredefinition-hierarchy">
          <valueBoolean value="true" />
        </extension>
        <code value="Reference" />
        <targetProfile value="http://StructureDefinition.hl7fhir.cn/Organization" />
        <targetProfile value="http://StructureDefinition.hl7fhir.cn/Hospital" />
        <targetProfile value="http://StructureDefinition.hl7fhir.cn/EndemicArea" />
      </type>
    </element>
    <element id="Organization.contact.name.text">
      <path value="Organization.contact.name.text" />
      <short value="联系人姓名" />
    </element>
  </differential>
</StructureDefinition>