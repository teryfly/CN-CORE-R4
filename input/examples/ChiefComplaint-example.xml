<?xml version="1.0" encoding="UTF-8"?>

<Condition xmlns="http://hl7.org/fhir">
  <id value="ChiefComplaint-example"/>
  <meta>
    <profile value="http://StructureDefinition.hl7fhir.cn/chief-complaint"/>
  </meta>

  <!-- 0..1 严重程度 -->
  <severity>
    <coding>
      <!--严重程度 CodeSystem地址-->
      <system value="http://snomed.info/sct"/>
      <!-- 0..1 严重程度-->
      <code value="24484000"/>
      <!-- 0..1 严重程度说明-->
      <display value="严重"/>
    </coding>
  </severity>
  <!-- 1..1 患者 -->
  <subject>
    <!-- 0..1  Reference(Patient）关联患者信息 -->
    <reference value="Patient/PatientID"/>
  </subject>
  <!-- 0..1 医疗事件 -->
  <encounter>
    <!-- 0..1  Reference(Encounter）关联医疗事件 -->
    <reference value="Encounter/EncounterID"/>
  </encounter>


  <!-- 0..1 发病情况 -->
  <onsetString value="2019-11-02日晚上开始出现胸闷，头晕现象。"/>
    <!-- 0..1 病情发展情况 -->
  <abatementString value="2019-11-03日出现呕吐，下午昏迷并且伴随发热。。"/>
  
    <!-- 0..1 主诉记录日期 -->
  <recordedDate value="2019-02-20T13:00:00Z"/>
  <!-- 0..1  记录者 -->
  <recorder>
    <!-- 0..1  Reference(Practitioner）关联医护人员 -->
    <reference value="Practitioner/PractitionerID"/>
  </recorder>
 
</Condition>
